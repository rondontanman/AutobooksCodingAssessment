@model IEnumerable<GroceryStoreAPI.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var Customer in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelCustomer => Customer.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Customer.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@Customer.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@Customer.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
